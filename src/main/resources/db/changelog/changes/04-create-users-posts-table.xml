<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.12.xsd">

    <!-- Create user table (H2-compatible) -->
    <changeSet id="4-create-user-posts-table" author="anoop">
        <createTable tableName="posts">
            <column name="id" type="BIGINT AUTO_INCREMENT">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_posts"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="heading" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- Insert dummy data -->
    <changeSet id="4-insert-dummy-posts" author="anoop">
        <insert tableName="posts">
            <column name="id" value="1"/>
            <column name="user_id" value="1"/>
            <column name="heading" value="Heading 1"/>
            <column name="description" value="Description 1"/>
        </insert>
        <insert tableName="posts">
            <column name="id" value="2"/>
            <column name="user_id" value="3"/>
            <column name="heading" value="Heading 2"/>
            <column name="description" value="Description 2"/>
        </insert>
        <insert tableName="posts">
            <column name="id" value="3"/>
            <column name="user_id" value="3"/>
            <column name="heading" value="Heading 3"/>
            <column name="description" value="Description 3"/>
        </insert>
        <insert tableName="posts">
            <column name="id" value="4"/>
            <column name="user_id" value="4"/>
            <column name="heading" value="Heading 4"/>
            <column name="description" value="Description 4"/>
        </insert>
        <insert tableName="posts">
            <column name="id" value="5"/>
            <column name="user_id" value="4"/>
            <column name="heading" value="Heading 5"/>
            <column name="description" value="Description 5" />
        </insert>
    </changeSet>
</databaseChangeLog>
